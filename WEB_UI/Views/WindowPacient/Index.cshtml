@model WEB_UI.Models.Pacient
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Pacient.cshtml";
}

<div class="jumbotron">
    <h1>Добрий день @Html.DisplayFor(model => model.Sourname) @Html.DisplayFor(model => model.Name)</h1>
    <p class="lead">Дякуємо що обрали саме нашу медичну систему.</p>
    <p class="lead">Номер вашої медичної карти: @Html.DisplayFor(model => model.Card_number)</p>
</div>
<div class="col-md-12 text-center">
    <h1>Ціль вашого візиту</h1>
</div>

<div class="row">
    <div class="col-md-12 text-center mb-2">
        @Html.ActionLink("Запис до терапевта", "BWTherapist", "WindowPacient", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
    <div class="col-md-12 text-center mb-2">
        @Html.ActionLink("виклик на дім", "BHTherapist", "WindowPacient", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
    <div class="col-md-12 text-center mb-2">
        @Html.ActionLink("Електронна черга", "ListQueue", "Queue", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
    <div class="col-md-12 text-center mb-2">
        @Html.ActionLink("Медкомісія", "MedicalBoard", "WindowPacient", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
</div>
