@model WEB_UI.Models.Doctor
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Doctor.cshtml";
}

<div class="jumbotron">
    <h1>Добрий день</h1>
    <p class="lead"><b>Лікар :</b> @Html.DisplayFor(model => model.Sourname) @Html.DisplayFor(model => model.Name)</p>
    <p class="lead"><b>Фах :</b> @Html.DisplayFor(model => model.Specialization.Post_Specialization)</p>
    <p class="lead"><b>№ медичного посвідчення :</b> </p>
    <p class="lead"><b>Ваш розклад на сьогодні :</b> @DateTime.Now.ToString()</p>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>Прийом в кабінеті @Html.ActionLink("Перейти>>", "ScheduleDetali", "WindowDoctor", new { id_doctor = @Model.id }, new { @class = "btn btn-primary" })</h3>
        @{

            Html.RenderAction("Schedule", "WindowDoctor", new { id_doctor = Model.id });
        }
    </div>
    <div class="col-md-6">
        <h3>Виклик на дім @Html.ActionLink("Перейти>>", "ScheduleDetali", "WindowDoctor", new { id_doctor = @Model.id, type = 0 }, new { @class = "btn btn-primary" })</h3>
        @{
            Html.RenderAction("Schedule", "WindowDoctor", new { id_doctor = Model.id, type = 0 });
        }

    </div>
</div>
@*Reception(int? id_doctor, DateTime? dt, int? type, int? id_queue)*@

